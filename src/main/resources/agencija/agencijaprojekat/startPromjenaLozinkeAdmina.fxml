<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agencija.agencijaprojekat.AdminPromjenaLozinkeController">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label text="Unesite novu lozinku:" />
        <PasswordField fx:id="startNovaLozinka" onAction="#startPromjenaLozinke" promptText="Nova lozinka" />

        <Label text="Potvrdite novu lozinku:" />
        <PasswordField fx:id="startPotvrdaLozinke" onAction="#startPromjenaLozinke" promptText="Potvrdite lozinku" />

        <Button onAction="#startPromjenaLozinke" text="Promijeni lozinku" />
    </VBox>
</AnchorPane>
